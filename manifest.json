{
  "manifest_version": 2,
  "name": "ScopeStoplight",
  "version": "1.1",

  "description": "Shows a green or red icon in the address bar depending on whether or not the current URL matches the set scope.",

  "icons": {
    "32": "icons/red.png"
  },

  "permissions": [
    "notifications",
    "tabs",
    "storage"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "page_action": {
    "browser_style": true,
    "default_icon": {
        "32": "icons/red.png"
    },
    "default_title": "Scope Stoplight",
    "default_popup": "popup/main.html"
  }
}